@model IEnumerable<ElectroShop.Models.MProduct>
<div class="single-left-sidebar sidebar-best-seller">
    <div class="left-title-area">
        <h2 class="left-title" style="font-size:16px;">Sản phẩm mới</h2>
    </div>
    <div class="row">
        <div class="sidebar-best-seller-carousel">
            <div class="item">
                @foreach (var item in Model)
                {
                    if (@item.Discount != 0)
                    {
                        <div class="single-product-item">
                            <div class="sidebar-product-image">
                                <a href="~/@item.Slug"><img src="~/Public/library/product/@item.Image" alt="@item.Name" width="80px;" /></a>
                            </div>
                            <div class="product-info sede-pro-info">
                                <a href="~/@item.Slug">@item.Name</a>
                                <div class="customar-comments-box">
                                    <div class="rating-box">
                                        <i class="fa fa-star"></i>
                                        <i class="fa fa-star"></i>
                                        <i class="fa fa-star"></i>
                                        <i class="fa fa-star"></i>
                                        <i class="fa fa-star"></i>
                                    </div>
                                </div>
                                <div class="price-box">
                                    @if (@item.Discount == 1)
                                    {
                                        <span class="old-price">@String.Format("{0:0,0₫}", @item.Price)</span>
                                        <br />
                                        <span class="price">@String.Format("{0:0,0₫}", @item.ProPrice)</span>
                                    }
                                    else
                                    {
                                        <span class="price">@String.Format("{0:0,0₫}", @item.ProPrice)</span>
                                    }
                                </div>
                            </div>
                        </div>
                    }
                    else
                    {

                    }
                }
            </div>
        </div>
    </div>
</div>


