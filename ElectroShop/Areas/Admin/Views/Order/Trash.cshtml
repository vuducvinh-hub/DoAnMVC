@model IEnumerable<ElectroShop.Models.ListOrder>
@{
    ViewBag.Title = "Đơn hàng đã hủy";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
@Html.Partial("_MessageAlert")
<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h2>Đơn hàng đã hủy</h2>
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a href="~/admin">Dashboard</a>
            </li>
            <li class="breadcrumb-item">
                <a>Order</a>
            </li>
            <li class="breadcrumb-item active">
                <strong>Index</strong>
            </li>
        </ol>
    </div>
    <div class="col-lg-2">
        <br />
        <a class="btn btn-success " href="@Url.Action("Index","Order")"><i class="fa fa-reply"></i>&nbsp;&nbsp;<span class="bold">Trở về</span></a>

    </div>
</div>
<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox ">

                <div class="ibox-content">

                    <table class="footable table table-stripped toggle-arrow-tiny">
                        <thead>
                            <tr>
                                <th data-hide="all">STT</th>
                                <th data-hide="all">ID</th>
                                <th data-toggle="true"> Khách hàng </th>
                                <th>Tổng tiền</th>
                                <th data-hide="all">Ngày đặt</th>
                                <th data-hide="all">Ngày xuất</th>
                                <th>Công cụ</th>
                            </tr>
                        </thead>
                        <tbody>
                            @{var stt = 1;}
                            @foreach (var c in Model)
                            {
                            <tr>
                                <td>@stt</td>
                                <td> @c.ID</td>
                                <td>
                                    <a href="admin/order/detail?id=<%= cat.IDO%>">
                                        @c.CustomerName
                                    </a>
                                </td>

                                <td class="">
                                    @String.Format("{0:0,0₫}", c.SAmount)
                                </td>
                                <td>
                                    @c.CreateDate
                                </td>
                                <td>
                                    @c.ExportDate
                                </td>

                                <td class="">
                                    <button type="button" class="btn btn-info btn-sm" data-toggle="tooltip" data-placement="top" title="Khôi phục">
                                        <a href="@Url.Action("Undo", "Order", new { id = c.ID })" class="text-white"><i class="fa fa-undo"></i></a>
                                    </button>
                                    <button type="button" class="btn btn-secondary btn-sm" data-toggle="tooltip" data-placement="top" title="Xóa vĩnh viễn">
                                        <a href="@Url.Action("Delete", "Order", new { id = c.ID })" class="text-white"><i class="fa fa-trash"></i></a>
                                    </button>
                                </td>
                            </tr>
                                stt++;
                            }
                        </tbody>
                        <tfoot>
                            <tr>
                                <td colspan="5">
                                    <ul class="pagination float-right"></ul>
                                </td>
                            </tr>
                        </tfoot>
                    </table>

                </div>
            </div>
        </div>
    </div>

</div>