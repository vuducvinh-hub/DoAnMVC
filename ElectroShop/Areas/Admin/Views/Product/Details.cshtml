@model ElectroShop.Models.MProduct

@{
    ViewBag.Title = "Chi tiết sản phẩm: " + @Model.Name;
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
@Html.Partial("_MessageAlert")
<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-9">
        <h2>Sản phẩm</h2>
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a href="~/admin">Dashboard</a>
            </li>
            <li class="breadcrumb-item">
                <a>Product</a>
            </li>
            <li class="breadcrumb-item active">
                <strong>Detail</strong>
            </li>
        </ol>
    </div>
    <div class="col-lg-3">
        <br />
        <a class="btn btn-success " href="@Url.Action("Index","Product")"><i class="fa fa-mail-reply"></i>&nbsp;&nbsp;<span class="bold">Quay về</span></a>
        <a class="btn btn-danger" href="@Url.Action("Trash","Product")"><i class="fa fa-trash"></i>&nbsp;&nbsp;<span class="bold">Thùng rác</span></a>

    </div>
</div>
<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox ">
                <div class="ibox-title">
                    <h5 style="color:red;">@Model.Name</h5>
                    
                </div>
                <div class="ibox-content">
                    
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        
                        <div class="form-group">
                            <label>Giá</label>

                            @Html.Raw(@String.Format("{0:0,0₫}", Model.ProPrice));
                        </div>

                    
                    
                        <div class="form-group">
                            <label>Ngày tạo</label>

                            @String.Format("{0:dd:MM:yyyy -  hh:mm:ss}", Model.Updated_at)
                        </div>
                        <div class="form-group">
                            <label>Giá khuyến mãi</label>
                            @Html.Raw(@String.Format("{0:0,0₫}", Model.Price));
                        </div>


                    
                </div>
            </div>
        </div>
        
    </div>
 </div>   