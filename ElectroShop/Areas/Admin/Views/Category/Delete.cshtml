@model ElectroShop.Models.MCategory

@{
    ViewBag.Title = "Xóa danh mục";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
@Html.Partial("_MessageAlert")
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="row wrapper border-bottom white-bg page-heading">
        <div class="col-lg-9">
            <h2>Danh mục sản phẩm</h2>
            <ol class="breadcrumb">
                <li class="breadcrumb-item">
                    <a href="~/admin">Dashboard</a>
                </li>
                <li class="breadcrumb-item">
                    <a>Category</a>
                </li>
                <li class="breadcrumb-item active">
                    <strong>Delete</strong>
                </li>
            </ol>
        </div>
        <div class="col-lg-3">
            <br />
            <input type="submit" value="Xóa" class="btn btn-primary btn-sm fas fa-plus-circle" />

            <a class="btn btn-danger" href="@Url.Action("Index", "Category")"><i class="fa fa-mail-reply"></i>&nbsp;&nbsp;<span class="bold">Quay về</span></a>

        </div>
    </div>
    <div class="wrapper wrapper-content animated fadeInRight">
        <div class="row">
            <div class="col-lg-12">
                <div class="ibox ">
                    <div class="ibox-title">
                        <h5 style="color:red;">@Model.Name</h5>
                        
                    </div>
                    <div class="ibox-content">

                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                        
                        <div class="form-group">
                            <label>Ngày tạo</label>

                            @String.Format("{0:dd:MM:yyyy -  hh:mm:ss}", Model.Updated_at)
                        </div>
                        

                    </div>
                </div>
            </div>

        </div>
    </div>

}