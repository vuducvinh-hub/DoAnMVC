@model ElectroShop.Models.MPost

@{
    ViewBag.Title = "Chỉnh sửa";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

@Html.Partial("_MessageAlert")
@using (Html.BeginForm("Edit", "Page", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    <div class="row wrapper border-bottom white-bg page-heading">
        <div class="col-lg-9">
            <h2>trang đơn</h2>
            <ol class="breadcrumb">
                <li class="breadcrumb-item">
                    <a href="~/admin">Dashboard</a>
                </li>
                <li class="breadcrumb-item">
                    <a>Page</a>
                </li>
                <li class="breadcrumb-item active">
                    <strong>Create</strong>
                </li>
            </ol>
        </div>
        <div class="col-lg-3">
            <br />
            <button class="btn btn-success " type="submit"><i class="fa fa-upload"></i>&nbsp;&nbsp;<span class="bold">Chấp nhận</span></button>
            <a class="btn btn-danger " href="@Url.Action("Index","Page")"><i class="fa fa-undo"></i>&nbsp;&nbsp;<span class="bold">Trở về</span></a>

        </div>
    </div>
    <div class="wrapper wrapper-content animated fadeInRight">
        <div class="row">
            <div class="col-lg-12">
                <div class="ibox ">
                    <div class="ibox-title">
                        <p><i class="text-danger"><strong>* </strong>Các mục đánh dấu (*) là bắt buộc</i></p>

                    </div>
                    <div class="ibox-content">
                        <form method="get">
                            <div class="row">
                                <div class="col-md-9">
                                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                    @Html.HiddenFor(model => model.Id)
                                    @Html.HiddenFor(model => model.Created_At)
                                    @Html.HiddenFor(model => model.Created_By)
                                    @Html.HiddenFor(model => model.Img)
                                    <div class="form-group">
                                        @Html.Label("Tiêu đề trang đơn", htmlAttributes: new { @class = "control-label" }) <label style="color:red;">(*)</label>
                                        <div class="">
                                            @Html.EditorFor(model => model.Title, new { htmlAttributes = new { @class = "form-control" } })
                                            @Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-danger" })
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        @Html.Label("Chi tiết trang đơn")<label style="color:red;">(*)</label>
                                        <div class="">
                                            @Html.TextAreaFor(model => model.Detail, new { @class = "ckeditor", @id = "ckeditors" })
                                            @Html.ValidationMessageFor(model => model.Detail, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-3">

                                    <div class="form-group">
                                        @Html.Label("Từ khóa [SEO]", htmlAttributes: new { @class = "control-label" })<label style="color:red;">(*)</label>
                                        <div class="">
                                            @Html.TextAreaFor(model => model.MetaKey, new { @class = "form-control" })
                                            @Html.ValidationMessageFor(model => model.MetaKey, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        @Html.Label("Mô tả [SEO]", htmlAttributes: new { @class = "control-label" })<label style="color:red;">(*)</label>
                                        <div class="">
                                            @Html.TextAreaFor(model => model.MetaDesc, new { @class = "form-control" })
                                            @Html.ValidationMessageFor(model => model.MetaDesc, "", new { @class = "text-danger" })
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        @Html.Label("Trạng thái", htmlAttributes: new { @class = "control-label " })
                                        <div class="">
                                            @Html.DropDownListFor(model => model.Status, new[] { new SelectListItem { Value = "1", Text = "Hiển thị" }, new SelectListItem { Value = "2", Text = "Không hiển thị" } }, new { @class = "form-control" })
                                            @Html.ValidationMessageFor(model => model.Status, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                </div>
                            </div>

                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

}
<script type="text/javascript">
    CKEDITOR.replace('ckeditor');
</script>
